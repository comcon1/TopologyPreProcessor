    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/programs/tppmktop",
            "cwd": "${workspaceFolder}",
            "args": ["-s", "database", "-u", "tppuser", "-p", "YourSecretPassword", 
            "-f", "OPLS-AA", "-i", "./tests.future/test.pdb", "-o", "tests.future/output.itp",
            "-l", "tests.future/lack.itp", "-m"],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}